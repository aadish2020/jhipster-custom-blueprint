import { Component, OnInit } from '@angular/core';
import { ActivatedRoute } from '@angular/router';

import { <%= entityAngularName %> } from '../<%= entityFileName %>.model';
import { DataUtils } from 'app/core/util/data-util.service';
import { AccountService } from 'app/core/auth/account.service';

@Component({
  selector: '<%= jhiPrefix %>-<%= entityFileName %>-detail',
  templateUrl: './<%= entityFileName %>-detail.component.html',
  styleUrls: ['./<%= entityFileName %>-detail.component.scss']
})
export class <%= entityAngularName %>DetailComponent implements OnInit {
  <%= entityInstance %>: <%= entityAngularName %> | null = null;

  constructor(
    protected activatedRoute: ActivatedRoute,
    protected dataUtils: DataUtils,
    protected accountService: AccountService
  ) {}

  ngOnInit(): void {
    this.activatedRoute.data.subscribe(({ <%= entityInstance %> }) => {
      this.<%= entityInstance %> = <%= entityInstance %>;
    });
  }

  byteSize(base64String: string): string {
    return this.dataUtils.byteSize(base64String);
  }

  openFile(base64String: string, contentType: string | null | undefined): void {
    this.dataUtils.openFile(base64String, contentType);
  }

  previousState(): void {
    window.history.back();
  }

  hasAnyAuthority(authorities: string[] | string): boolean {
    return this.accountService.hasAnyAuthority(authorities);
  }
} 
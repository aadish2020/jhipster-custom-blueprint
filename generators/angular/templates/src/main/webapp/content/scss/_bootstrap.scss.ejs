// Bootstrap configuration and customization
@import 'bootstrap/scss/functions';

// JHipster Bootstrap customization
$primary: #3e8acc;
$success: #28a745;
$info: #17a2b8;
$warning: #ffc107;
$danger: #dc3545;

// Bootstrap features
$enable-rounded: true;
$enable-shadows: true;
$enable-gradients: false;
$enable-transitions: true;

// Typography
$font-family-sans-serif: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
$font-size-base: 1rem;

// Border radius
$border-radius: 0.25rem;
$border-radius-lg: 0.5rem;
$border-radius-sm: 0.125rem;

// Import Bootstrap core
@import 'bootstrap/scss/variables';
@import 'bootstrap/scss/mixins';

// Maps for compatibility
:root {
  --bs-primary: #{$primary};
  --bs-success: #{$success};
  --bs-info: #{$info};
  --bs-warning: #{$warning};
  --bs-danger: #{$danger};
} 
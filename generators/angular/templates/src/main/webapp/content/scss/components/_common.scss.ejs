// Home Page
.jh-home {
  max-width: 800px;
  margin: 0 auto;
  padding: var(--jh-spacing-xl) var(--jh-spacing-md);
  text-align: center;

  .hipster {
    display: inline-block;
    width: 240px;
    height: 240px;
    background: url('/content/images/jhipster_family_member_2.svg') no-repeat center top;
    background-size: contain;
    margin-bottom: var(--jh-spacing-lg);
    transition: transform 0.3s ease;

    &:hover {
      transform: scale(1.05);
    }
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--jh-text-color);
    margin-bottom: var(--jh-spacing-sm);
  }

  p {
    font-size: 1.2rem;
    color: var(--jh-text-muted);
    margin-bottom: var(--jh-spacing-lg);
  }

  .alert {
    margin: var(--jh-spacing-md) auto;
    padding: var(--jh-spacing-md) var(--jh-spacing-lg);
    border-radius: var(--jh-border-radius);
    background-color: var(--jh-bg-light);
    border: 1px solid var(--jh-border-color);
    max-width: 600px;
    
    &.alert-success {
      background-color: rgba(40, 167, 69, 0.1);
      border-color: rgba(40, 167, 69, 0.2);
      color: var(--jh-success);
    }
    
    &.alert-warning {
      background-color: rgba(255, 193, 7, 0.1);
      border-color: rgba(255, 193, 7, 0.2);
      color: var(--jh-warning);
    }

    .alert-link {
      color: var(--jh-primary);
      font-weight: 600;
      text-decoration: none;
      padding: 0 var(--jh-spacing-xs);
      
      &:hover {
        text-decoration: underline;
      }
    }
  }

  .links {
    margin-top: var(--jh-spacing-xl);
    padding: var(--jh-spacing-lg);
    background-color: var(--jh-bg-light);
    border-radius: var(--jh-border-radius);
    
    p {
      font-size: 1.1rem;
      margin-bottom: var(--jh-spacing-md);
    }
    
    a {
      color: var(--jh-primary);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s ease;
      
      &:hover {
        color: var(--jh-secondary);
        text-decoration: underline;
      }
    }

    ul {
      list-style: none;
      padding: 0;
      margin: var(--jh-spacing-md) 0;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--jh-spacing-md);
      
      li {
        margin-bottom: var(--jh-spacing-sm);
        
        a {
          display: inline-flex;
          align-items: center;
          gap: var(--jh-spacing-xs);
          
          &:hover {
            transform: translateX(var(--jh-spacing-xs));
          }
        }
      }
    }
  }
}

// Cards
.jh-card {
  background: white;
  border-radius: var(--jh-border-radius);
  box-shadow: var(--jh-shadow);
  padding: var(--jh-card-padding);
  margin-bottom: var(--jh-spacing-md);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  
  &:hover {
    transform: translateY(-2px);
    box-shadow: var(--jh-shadow-lg);
  }
}

// Alerts
.jh-alert {
  padding: var(--jh-spacing-md);
  margin-bottom: var(--jh-spacing-md);
  border-radius: var(--jh-border-radius);
  
  &.jh-alert-danger {
    background-color: var(--jh-danger);
    color: white;
  }
  
  &.jh-alert-success {
    background-color: var(--jh-success);
    color: white;
  }
  
  &.jh-alert-warning {
    background-color: var(--jh-warning);
    color: white;
  }
  
  &.jh-alert-info {
    background-color: var(--jh-info);
    color: white;
  }
}

// Forms
.jh-form-group {
  margin-bottom: var(--jh-spacing-md);
}

.jh-form-label {
  display: block;
  margin-bottom: var(--jh-spacing-xs);
  font-weight: 500;
  color: var(--jh-text-color);
}

.jh-form-input {
  width: 100%;
  padding: var(--jh-spacing-sm);
  border: 1px solid var(--jh-border-color);
  border-radius: var(--jh-border-radius);
  transition: border-color 0.2s ease, box-shadow 0.2s ease;
  background-color: white;
  color: var(--jh-text-color);

  &:focus {
    outline: none;
    border-color: var(--jh-primary);
    box-shadow: var(--jh-shadow-sm);
  }

  &::placeholder {
    color: var(--jh-text-muted);
  }
}

// Tables
.jh-table-container {
  overflow-x: auto;
  margin-bottom: var(--jh-spacing-lg);
  border-radius: var(--jh-border-radius);
  box-shadow: var(--jh-shadow-sm);
}

.jh-table {
  width: 100%;
  border-collapse: collapse;
  background-color: white;
  
  th, td {
    padding: var(--jh-spacing-sm) var(--jh-spacing-md);
    border-bottom: 1px solid var(--jh-border-color);
  }

  th {
    text-align: left;
    background-color: var(--jh-bg-light);
    font-weight: 500;
    color: var(--jh-text-muted);
    white-space: nowrap;
  }
  
  tbody tr {
    &:hover {
      background-color: var(--jh-bg-light);
    }

    &:last-child td {
      border-bottom: none;
    }
  }
} 